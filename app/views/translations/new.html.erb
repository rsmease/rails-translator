

<h1> So, you want a translation </h1>
<%= form_for :translation, url: translations_path do |f| %>
  <p>
    <%= f.label "I want to translate" %><br>
    <%= f.text_area :text, size: "60x12" %>
	<%= f.select(:language) do %>
	  <% [['English', 1], ['French', 2], ['Spanish', 3], ['German', 4], ['Latin', 5], ['Greek', 6]].each do |c| -%>
	    <%= content_tag(:option, c.first, value: c.last) %>
	  <% end %>
	<% end %>
  </p>
 
  <p>
    <%= f.submit "Translate" %>
  </p>
<% end %>